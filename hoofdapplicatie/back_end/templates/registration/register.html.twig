{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.usrName, {
            label: 'Username'}) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'}) }}
        {{ form_row(registrationForm.usrMail, {
            label: 'Email'}) }}
    <a href="https://www.termsfeed.com/live/ef098255-32a4-46ef-a1d5-9bb57194fb38">Terms of service.</a>
        {{ form_row(registrationForm.usrHasagreed, {
            label: 'Please agree to our terms of service'}) }}
        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
